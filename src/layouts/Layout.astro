---
import '../assets/styles.css';
const siteTitle = 'LIG Tech Principal';
---
<!doctype html>
<html lang="en" class="h-full">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="shortcut icon" href="/favicon.ico" />
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
		<meta name="apple-mobile-web-app-title" content="LIG" />
		<link rel="manifest" href="/site.webmanifest" />
		<meta name="generator" content={Astro.generator} />
		<title>{siteTitle}</title>
		<!-- Iconify Web Component for inline icons -->
		<script src="https://code.iconify.design/iconify-icon/2.1.0/iconify-icon.min.js" defer></script>
				<script is:inline>
						(function(){
							try {
								const stored = localStorage.getItem('theme');
								const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
								const isDark = stored ? stored === 'dark' : prefersDark;
								document.documentElement.classList.toggle('dark', isDark);
							} catch(e) {}
						})();
				</script>
	</head>
	<body class="min-h-screen text-gray-900 dark:text-gray-100 bg-gradient-to-b from-brand-primary/12 to-brand-lightBg dark:bg-none dark:bg-black">
		<div class="min-h-screen">
			<main class="px-4 pt-12">
				<div class="mx-auto max-w-md sm:max-w-2xl lg:max-w-4xl py-8 px-4 text-gray-900 dark:text-gray-100 font-sans">
					<div class="prose prose-invert dark:prose-invert max-w-none text-gray-100">
						<slot />
					</div>
				</div>
			</main>
			<button id="theme-toggle" aria-label="Toggle theme" class="fixed bottom-4 right-4 rounded-full p-3 border border-gray-200 bg-white/80 backdrop-blur shadow-sm hover:bg-white focus:outline-none focus:ring-2 focus:ring-brand-accent dark:bg-white/5 dark:border-white/10 dark:hover:bg-white/10">
				<iconify-icon icon="mdi:moon-waning-crescent" width="22" height="22" class="inline dark:hidden"></iconify-icon>
				<iconify-icon icon="mdi:white-balance-sunny" width="22" height="22" class="hidden dark:inline"></iconify-icon>
			</button>
		</div>
				<script is:inline>
						(function(){
							const btn = document.getElementById('theme-toggle');
							if (!btn) return;
							btn.addEventListener('click', () => {
								const nowDark = document.documentElement.classList.toggle('dark');
								try { localStorage.setItem('theme', nowDark ? 'dark' : 'light'); } catch(e) {}
							});
						})();
				</script>
	</body>
</html>
